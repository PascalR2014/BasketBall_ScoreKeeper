<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
    </style>
    <!-- Style for team name ! -->
    <style name="custom1">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">@dimen/custom1</item>
    </style>
    <!-- Style for TextView score ! -->
    <style name="custom2">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/custom2</item>
        <item name="android:layout_marginBottom">@dimen/custom2</item>
    </style>
    <!--Style for button score -->
    <style name="btn_score">
        <item name="android:layout_marginLeft">@dimen/btn_score</item>
        <item name="android:layout_marginRight">@dimen/btn_score</item>
        <item name="android:layout_marginBottom">@dimen/bottom_btn</item>
    </style>
    <!--Style for button reset -->
    <style name="custom3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorResetBtn</item>
    </style>
    <!--Style for button btn_img -->
    <style name="custom3.1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorSpecialBtn</item>
    </style>
    <!--style new textView-->
    <style name="status_text_view">
        <item name="android:textColor">#39FF14</item>
        <item name="android:layout_marginLeft">@dimen/status_text_view</item>
        <item name="android:layout_marginRight">@dimen/status_text_view</item>
        <item name="android:layout_marginTop">@dimen/status_text_view</item>
        <item name="android:textSize">34sp</item>
    </style>
</resources>
